---
import art1 from "/art1.jpg"
import art2 from "/art2.jpg"
import art3 from "/art3.jpg"
import art4 from "/art4.jpg"
---

<div class="mx-12 mb-24">
  <h1 class="my-24 text-center text-3xl">Latest Art Pieces</h1>

  <div
    class="grid grid-cols-1 gap-12 md:mx-24 md:grid-cols-2 xl:mx-48 xl:grid-cols-4"
  >
    <div class="relative group">
      <img
        src={art1}
        alt="Painting"
        class="w-full rounded-lg transition-all group-hover:-translate-x-3"
      />
      <div
        class="absolute left-0 top-0 w-full h-full bg-black group-hover:translate-x-4 group-hover:translate-y-4 rounded-lg -z-10 transition-all"
      >
      </div>
    </div>
    <div class="relative group">
      <img
        src={art2}
        alt="Painting"
        class="w-full rounded-lg transition-all group-hover:-translate-x-3"
      />
      <div
        class="absolute left-0 top-0 w-full h-full bg-black group-hover:translate-x-4 group-hover:translate-y-4 rounded-lg -z-10 transition-all"
      >
      </div>
    </div>
    <div class="relative group">
      <img
        src={art3}
        alt="Painting"
        class="w-full rounded-lg transition-all group-hover:-translate-x-3"
      />
      <div
        class="absolute left-0 top-0 w-full h-full bg-black group-hover:translate-x-4 group-hover:translate-y-4 rounded-lg -z-10 transition-all"
      >
      </div>
    </div>
    <div class="relative group">
      <img
        src={art4}
        alt="Painting"
        class="w-full rounded-lg transition-all group-hover:-translate-x-3"
      />
      <div
        class="absolute left-0 top-0 w-full h-full bg-black group-hover:translate-x-4 group-hover:translate-y-4 rounded-lg -z-10 transition-all"
      >
      </div>
    </div>
  </div>
</div>
